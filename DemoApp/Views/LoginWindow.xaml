<Window x:Class="DemoApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoApp.Views"
        mc:Ignorable="d"
        Title='ООО "БытСервис"' Height="450" Width="400" MinHeight="450" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Margin="50 0">
            <TextBlock Text="Авторизация" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Label Content="Логин" Margin="0 40 0 0"/>
            <TextBox x:Name="LoginBox" Text="kasoo"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Password="root"/>
            <Button x:Name="AuthButton" Content="Войти" Margin="0 40" Click="AuthButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
